{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "A simple chat app",
  "main": "server.js",
  "dependencies": {
    "express": "^4.19.2",
    "nodemon": "^3.1.0",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5"
  },
  "type": "module",
  "devDependencies": {
    "gh-pages": "^6.1.1",
